<root>
	<styles>		
		<include src="file://{resources}/styles/steamstyles.css"/>
		<include src="file://{resources}/styles/welcometosteam.css" />
		<include src="file://{resources}/styles/mainmenu.css" />
	</styles>

	<WelcomeToSteamIndividualTip selectionpos="auto" mousecanactivate="unfocused">
    <Button class="SubPanel" tabindex="4" selectionpos="0,4" onactivate="BrowserGoToURL( https://store.steampowered.com/account/ );">
			<Panel id="HR4" class="HR" />
			<Panel class="SubPanelCenterContainer">
				<Image class="SubImageCenterAlign" id="sub_image_center" src="file://{images}/welcomeupdates/securitybanner.png" scaling="stretch" />
				
				<Panel class="SubText" id="sub_text_center_wide">
          <Label class="SubHeader" text="#MainMenu_Welcome_Sub_Security_Title" />
          <Label class="SubDesc" text="#MainMenu_Welcome_Sub_Security_Desc" html="true" />
          
          <Panel class="SecurityTwoColumnWrapper">
            <Panel class="SecurityColumnWrapper">
              <Image src="file://{images}/welcomeupdates/bp_icon_phone.png" />
              <Panel class="SecurityColumnTextWrapper">
                <Label class="Header" text="#MainMenu_Welcome_Sub_Security_PhoneA" />
                <Label text="#MainMenu_Welcome_Sub_Security_PhoneB" />
              </Panel>
            </Panel>
            <Panel class="SecurityColumnWrapper">
              <Image src="file://{images}/welcomeupdates/bp_icon_app.png" />
              <Panel class="SecurityColumnTextWrapper">
                <Label class="Header" text="#MainMenu_Welcome_Sub_Security_TwoFactorA" />
                <Label text="#MainMenu_Welcome_Sub_Security_TwoFactorB" />
              </Panel>
            </Panel>
          </Panel>
          
          <Panel class="SecurityCallToActionWrapper">
            <Label class="OnlyController" text="#MainMenu_Welcome_Sub_Security_DescAction_Controller" html="true" />
            <Label class="OnlyKBMouse" text="#MainMenu_Welcome_Sub_Security_DescAction_MouseKB" />
          </Panel>
        </Panel>
			</Panel>
		</Button>
  </WelcomeToSteamIndividualTip>
</root>