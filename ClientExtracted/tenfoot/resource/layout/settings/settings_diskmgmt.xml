<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
		
	</styles>

	<SettingsPanel_DiskManagement class="SettingsSection">
		<!-- top header panel -->
		<Panel class="SettingsHeader">
			<Label class="SettingsHeaderLegend" text="#Settings_DiskManagement" />
		</Panel>
		
		<!-- main panel -->
		<Panel class="SettingsContent SettingsCenterContentWide" tabindex="auto" selectionpos="auto">
				<Panel id="SettingsDiskSpaceManagement_IntroBlock" class="HorzContainer">
					<Label class="SettingsCallout" text="#Settings_DiskManagementIntro" />
					<Label class="SettingsCallout" text="#SettingsDiskManagement_AvailableDisk" />
				</Panel>

				<Panel class="HorzContainer">
					<Panel id="SettingsDiskManagementTable">
						<Panel class="SettingsDiskSpaceManagementHeader">
							<Label id="AppNameHeader" class="SettingsDiskSpaceManagement_ColumnName" text="#Settings_DiskManagement_App" hittest="false" />
							<Label id="AppSizeHeader" class="SettingsDiskSpaceManagement_ColumnName" text="#Settings_DiskManagement_Size" hittest="false" />
						</Panel>
						<Panel id="AppList" class="VertContainer" childfocusonhover="false">
							<!-- label instances added here -->
						</Panel>
					</Panel>
				</Panel>

		</Panel>
	</SettingsPanel_DiskManagement>

</root>
