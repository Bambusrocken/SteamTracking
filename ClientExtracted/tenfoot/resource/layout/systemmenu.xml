<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/msgbox.css" />
		<include src="file://{resources}/styles/systemmenu.css" />
	</styles>
	
	<SystemMenu class="TenfootMsgBox" onmouseactivate="CloseModalDialog()" defaultfocus="MainMenuButton" >
			<Panel id="TopRow" tabindex="1" selectionpos="10,0" selectionposboundary="vertical" onmovedown="SetInputFocus( ProfileButton );" onmoveleft="None();" >
				<Panel id="Avatar">
						<AvatarImage id="SelfAvatar" onmouseactivate="CloseModalDialog(); OpenProfileMenu( false );" />
				</Panel>
				<Panel id="TopRowButtons">		
					<Label id="Clock" class="ClockLabel" text="#SystemMenu_Clock" />
					<Label id="ClockSuffix" class="ClockLabel" text="#SystemMenu_ClockSuffix" />
					<Panel id="SettingsWrapper" class="ButtonWrapper" tabindex="5" selectionpos="1,0" >
						<Button id="Settings" class="Button TopButton"   onactivate="SystemMenuNavigate( mainmenu ); ShowSettings(); ">
							<Image src="file://{images}/settings.png" />
						</Button>
						<Label class="LongDesc" text="#MainMenu_Settings" />
					</Panel>
					<Panel class="ButtonWrapper" tabindex="6" selectionpos="2,0" >
						<Button id="MusicGuideButton" class="MusicGuideButton TopButton Button"
								onactivate="ToggleMusicControlPanel( true );"		
							>
							<Image id="MusicGuideImage" src="file://{images}/music/musicguide_icon.png"/>
						</Button>
						<Label id="MusicGuideLabel" class="LongDesc" text="#MainMenu_MusicGuideLabel"/>
					</Panel>
					<Panel class="ButtonWrapper"  tabindex="7" selectionpos="3,0">
						<Button id="Exit" class="Button TopButton"   onactivate="ShowQuitDialog();">
							<Image src="file://{images}/exit.png" />
						</Button>
						<Label class="LongDesc" text="#MainMenu_Exit" />
					</Panel>				
				</Panel>
			</Panel>
			<Label class="MainMenu" text="#MainMenu_Quickmenu" />
			<Panel id="MenuRow" tabindex="2" selectionpos="0,10" selectionposboundary="vertical" onmoveup="SetInputFocus( Exit );" onmoveright="None();" >
				<Panel id="MenuRowButtons">	
					<Panel class="ButtonWrapper" tabindex="0" selectionpos="1,10" >
						<ParentalButton id="StoreButton" class="Button MenuButton ButtonLeft"   onactivate="SystemMenuNavigate( store );"> 
							<Image src="file://{images}/systemmenu/icon_store.png" />
						</ParentalButton>
						<Label class="ButtonLabel" text="#MainMenu_Store" />
					</Panel>
					
					<Panel class="ButtonWrapper" tabindex="1" selectionpos="1.1,10"  >
						<Button id="LibraryButton" class="Button MenuButton ButtonMiddle"  onactivate="SystemMenuNavigate( library );"> 
							<Image src="file://{images}/systemmenu/icon_library.png" />
						</Button>
						<Label class="ButtonLabel" text="#MainMenu_Library" />
					</Panel>

					<Panel class="ButtonWrapper" tabindex="2" selectionpos="1.2,10"  >
						<Button id="MainMenuButton" class="Button MenuButton ButtonMiddle"  onactivate="SystemMenuNavigate( mainmenu );"> 
							<Image src="file://{images}/systemmenu/icon_home.png" />
						</Button>
						<Label class="ButtonLabel" text="#MainMenu_MainMenu" />
					</Panel>

					<Panel class="ButtonWrapper" tabindex="3" selectionpos="1.3,10" >
						<ParentalButton id="CommunityButton" class="Button MenuButton ButtonMiddle" onactivate="SystemMenuNavigate( community );"> 
							<Image src="file://{images}/systemmenu/icon_community.png" />
						</ParentalButton>
						<Label class="ButtonLabel" text="#MainMenu_Community" />
					</Panel>

					<Panel class="ButtonWrapper" tabindex="4" selectionpos="1.4,10" >
						<ParentalButton id="ProfileButton" class="Button MenuButton ButtonRight"  onactivate="SystemMenuNavigate( profile );"> 
							<Image src="file://{images}/systemmenu/icon_profile.png" />
						</ParentalButton>
						<Label class="ButtonLabel" text="#Profile_OpenMyProfile" />
					</Panel>
					
				</Panel>					
			</Panel>
	</SystemMenu>
	
</root>
