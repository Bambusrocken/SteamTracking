<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/mainmenu.css" />
		<include src="file://{resources}/styles/library/controllerbindings_gordon.css" />
	</styles>

	<ControllerBindingsGordon defaultfocus="LeftTrackpad">
		<Button id="VDFDump" onactivate="DumpVDF()" />
		<Panel id="BindingsContainer" tabindex="auto" selectionpos="auto">
			<Panel id="TopHalfContainer">
				<Panel class="Background" id="BackgroundController" />
				<Panel class="Background" id="BackgroundLines" />
				<Panel class="BindingSlotStrip" id="Left">
					<Button class="ModeWrapper Trigger Left Gradient0" id="LeftTrigger" />
					<ControllerBindingButton class="BindingButton Gradient1" id="LeftBumperButton" />
					<ControllerBindingButton class="BindingButton Gradient2" id="LeftGripButton" />
					<ControllerBindingButton class="BindingButton Gradient3" id="BackButton" />
				</Panel>
				<Panel class="BindingSlotStrip" id="Right">
					<Button class="ModeWrapper Trigger Right Gradient0" id="RightTrigger" />
					<ControllerBindingButton class="BindingButton Right Gradient1" id="RightBumperButton" />
					<ControllerBindingButton class="BindingButton Right Gradient2" id="RightGripButton" />
					<ControllerBindingButton class="BindingButton Right Gradient3" id="StartButton" />
				</Panel>
			</Panel>

			<Panel id="ModeContainer">
				<Button class="ModeWrapper GapRight" id="LeftTrackpad" />
				<Button class="ModeWrapper GapRight" id="Joystick" />
				<Button class="ModeWrapper GapRight" id="ABXYButtons" />
				<Button class="ModeWrapper" id="RightTrackpad" />
			</Panel>
		</Panel>

		<ControllerPropertiesMode id="ModeProperties" />
		<ChooseBinding id="ChooseBinding" />
		<ControllerConfigBrowser id="ConfigBrowser" />

	</ControllerBindingsGordon>
</root>
