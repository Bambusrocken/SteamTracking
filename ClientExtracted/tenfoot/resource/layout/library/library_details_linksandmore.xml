<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/library/library.css" />
	</styles>

	<LibraryLinksAndMore tabindex="auto" selectionpos="auto" defaultfocus="LinksAndActionsWrapper">
		<Panel id="LinksAndMoreFullWrapper" class="LinksAndMoreFullWrapper">
			<Panel id="ContentsWrapper" class="ContentsWrapper">
				<Image id="SmallHeaderImage" class="SmallHeaderImage" scaling="stretch-to-fit-preserve-aspect" />
				<Panel id="LinksAndActionsWrapper" class="LinksAndActionsWrapper" tabindex="auto" selectionpos="auto" selectionposboundary="vertical">

					<Button id="ReturnToAppButton" class="NxLeftNavButtonAction">
                        <Image src="file://{images}/icon_return.png" />
						<Label id="ReturnToAppLabel" text="#Overlay_HowToClose" />
					</Button>

					<Button id="ManageControllersButton" class="ManageControllersButton NxLeftNavButtonAction">
                        <Image src="file://{images}/controller_support_full.png" />
						 <Label id="ManageControllersLabel" text="#Library_Details_ManageControllers"/>
					</Button>

					<Button id="OpenKeyboardButton" class="NxLeftNavButtonAction">
                        <Image src="file://{images}/icon_keyboard.png" />
						<Label id="ReturnToAppLabel" text="#Overlay_OpenKeyboard" />
					</Button>

					<Button id="AppKillButton" class="AppKillButton NxLeftNavButtonAction">
                        <Image src="file://{images}/exit.png" />
						<Label id="AppKillLabel" text="#Library_Details_KillApp" />
					</Button>


					<Button id="LibraryDetailsButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
                        <Image src="file://{images}/library/library_play_button.png" />
						<Label id="LibraryDetailsLabel" text="#Library_Details_LibraryDetails" />
					</Button>

					<Button id="StoreButton" class="NxLeftNavButton">
                        <Image src="file://{images}/icon_cart.png" />
						<Label id="StoreLabel" text="#Library_Details_GameStorePage" />
					</Button>

					<ParentalButton id="SettingsButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
                        <Image src="file://{images}/icon_settings.png" />
						<Label id="SettingsLabel" text="#Library_Details_Settings" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>

					<Button id="CDKeyButton" class="Button">
                        <Image src="file://{images}/library/icon_activate.png" />
						<Label id="CDKeyLabel" text="#Library_Details_LegacyCDKey" />
					</Button>

                    <Panel id="hr0" class="HorizontalSpace" />

                    <Label id="CommunityContent" text="#Library_Details_CommunityContentHeadline" class="Header" />

					<ParentalButton id="CommunityContentAllButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
						<Label text="#Library_Details_CommunityContent_All" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>
					<ParentalButton id="CommunityContentScreenshotsButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
						<Label text="#Library_Details_CommunityContent_Screenshots" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>
					<ParentalButton id="CommunityContentArtworkButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
						<Label text="#Library_Details_CommunityContent_Artwork" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>
					<ParentalButton id="CommunityContentVideosButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
						<Label text="#Library_Details_CommunityContent_Videos" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>
					<ParentalButton id="CommunityContentBroadcastsButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
						<Label text="#Library_Details_CommunityContent_Broadcasts" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>
					<ParentalButton id="CommunityContentWorkshopButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
						<Label text="#Library_Details_CommunityContent_Workshop" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>
					<ParentalButton id="CommunityContentNewsButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
						<Label text="#Library_Details_CommunityContent_News" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>
					<ParentalButton id="CommunityContentGuidesButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
						<Label text="#Library_Details_CommunityContent_Guides" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>
					<ParentalButton id="CommunityContentReviewsButton" class="NxLeftNavButton" onactivate="MoveRight(0);" >
						<Label text="#Library_Details_CommunityContent_Reviews" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>

				</Panel>
			</Panel>
		</Panel>
	</LibraryLinksAndMore>
</root>
