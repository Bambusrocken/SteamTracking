<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/library/library.css" />
	</styles>

	<LibraryLinksAndMore tabindex="auto" selectionpos="auto" defaultfocus="LinksAndActionsWrapper">
		<Panel id="LinksAndMoreFullWrapper" class="LinksAndMoreFullWrapper">
			<Panel id="ContentsWrapper" class="ContentsWrapper">
				<Image id="SmallHeaderImage" class="SmallHeaderImage" scaling="stretch-to-fit-preserve-aspect" />
				<Panel id="LinksAndActionsWrapper" class="LinksAndActionsWrapper" tabindex="auto" selectionpos="auto" selectionposboundary="vertical" childfocusonhover="true">

                    <Panel id="hr0" class="HorizontalSpace" />

					<Button id="ReturnToAppButton" class="NxLeftNavButtonAction">
                        <Image src="file://{images}/icon_return.png" />
						<Label id="ReturnToAppLabel" text="#Overlay_HowToClose" />
					</Button>

					<Button id="ManageControllersButton" class="ManageControllersButton NxLeftNavButtonAction">
                        <Image src="file://{images}/controller_support_full.png" />
						 <Label id="ManageControllersLabel" text="#Library_Details_ManageControllers"/>
					</Button>

					<Button id="OpenKeyboardButton" class="NxLeftNavButtonAction">
                        <Image src="file://{images}/icon_keyboard.png" />
						<Label id="ReturnToAppLabel" text="#Overlay_OpenKeyboard" />
					</Button>

					<Button id="AppKillButton" class="AppKillButton NxLeftNavButtonAction">
                        <Image src="file://{images}/exit.png" />
						<Label id="AppKillLabel" text="#Library_Details_KillApp" />
					</Button>

					<Panel id="hr1" class="HorizontalSpace" />

					<Button id="CDKeyButton" class="CDKeyButton NxLeftNavButtonAction">
                        <Image src="file://{images}/library/icon_activate.png" />
						<Label id="CDKeyLabel" text="#Library_Details_LegacyCDKey" />
					</Button>

					<ParentalButton id="DLCButton" class="DLCButton NxLeftNavButtonAction">
                        <Image src="file://{images}/downloads.png" />
						<Label id="DLCLabel" text="#Library_Details_DownloadableContent" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>

					<ParentalButton id="StoreButton" class="StoreButton NxLeftNavButtonAction">
                        <Image src="file://{images}/icon_cart.png" />
						<Label id="StoreLabel" text="#Library_Details_GameStorePage" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>

					<ParentalButton id="CommunityHubButton" class="CommunityHubButton NxLeftNavButtonAction">
                        <Image src="file://{images}/icon_community_hub.png" />
						<Label id="ForumsLabel" text="#Library_Details_GameHubPage" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>

					<ParentalButton id="ForumsButton" class="ForumsButton NxLeftNavButtonAction">
                        <Image src="file://{images}/icon_discussions.png" />
						<Label id="ForumsLabel" text="#Library_Details_GameForums" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>

					<Panel id="hr2" class="HorizontalSpace" />

					<ParentalButton id="ManageAccountButton" class="ManageAccountButton NxLeftNavButtonAction">
						<Label id="ManageAccountLabel" text="#Library_Details_ManageAccount" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>

					<ParentalButton id="SettingsButton" class="SettingsButton NxLeftNavButtonAction">
                        <Image src="file://{images}/icon_settings.png" />
						<Label id="SettingsLabel" text="#Library_Details_Settings" />
						<Image id="ParentalLockImageLocked" src="file://{images}/unlocked_acct_sm.png" />
					</ParentalButton>

					<Button id="SupportButton" class="SupportButton NxLeftNavButtonAction">
                        <Image src="file://{images}/support.png" />
						<Label id="SupportLabel" text="#Library_Details_Support" />
					</Button>


				</Panel>
			</Panel>
		</Panel>
	</LibraryLinksAndMore>
</root>
