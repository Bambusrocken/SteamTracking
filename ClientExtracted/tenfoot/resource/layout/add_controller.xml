<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/mainmenu.css" />
		<include src="file://{resources}/styles/msgbox.css" />
		<include src="file://{resources}/styles/add_controller.css" />
	</styles>

	<AddController defaultfocus="ButtonCancel" tabindex="auto" selectionpos="auto">
			<Panel id="MsgBoxHeader" class="MsgBoxHeader">
				<Label id="Title" class="Title" text="#SteamUI_AddController_Title" />
			</Panel>

			<Panel class="ControllerPanelContainer">
				
				<Panel id="ControllerImagePanel"> 
					<Image class="ControllerImage" src="file://{images}/library/controller/cropped_controller_config_controller_i_blank.png" />
					<Image class="ControllerImage ControllerImageBlink" src="file://{images}/library/controller/cropped_controller_config_controller_i_x_system.png" />
				</Panel>	
				
				<Panel id="ControllerPairingHelperPanel" >
					<Label class="AddControllerHowTo" text="#SteamUI_AddController_HowToPair" />
					<Panel id="ControllerPairingHelperTimerBG">
						<Panel id="ControllerPairingHelperTimerFG">
								<Panel id="ControllerPairingHelperTimerProgressBar"></Panel>
						</Panel>
					</Panel>
				</Panel>
			</Panel>
									   
				
			<Panel id="MsgBoxButtonArea" class="MsgBoxButtonArea">
				<Panel id="MsgBoxButtons">
					<Button id="ButtonCancel" class="ButtonCancel MsgBoxButton" onactivate="ButtonCancel();">
						<Label id="CancelButtonText" text="#UI_Cancel" />
					</Button>
				</Panel>
			</Panel>
	</AddController>
</root>
